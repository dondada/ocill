<%- model_class = ExerciseItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:graded) %></th>
      <th><%= model_class.human_attribute_name(:exercise_item_type) %></th>
      <th><%= model_class.human_attribute_name(:exercise_id) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:column) %></th>
      <th><%= model_class.human_attribute_name(:answer) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @exercise_items.each do |exercise_item| %>
      <tr>
        <td><%= link_to exercise_item.id, exercise_item_path(exercise_item) %></td>
        <td><%= exercise_item.text %></td>
        <td><%= exercise_item.graded %></td>
        <td><%= exercise_item.exercise_item_type %></td>
        <td><%= exercise_item.exercise_id %></td>
        <td><%= exercise_item.position %></td>
        <td><%= exercise_item.column %></td>
        <td><%= exercise_item.answer %></td>
        <td><%=l exercise_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_exercise_item_path(exercise_item), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      exercise_item_path(exercise_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_exercise_item_path,
            :class => 'btn btn-primary' %>
