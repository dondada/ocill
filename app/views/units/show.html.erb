<%- model_class = Unit -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @unit.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:drills) %>:</strong></dt>
  <dd>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Drill Title </th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @unit.drills.each do |drill| %>
          <%= render partial: 'shared/list_of_drills', locals: { drill: drill } -%>
        <% end -%>
      </tbody>
    </table>
  </dd>
</dl>
