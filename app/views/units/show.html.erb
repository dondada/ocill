<%- model_class = Unit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @unit.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @unit.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @unit.course_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:drills) %>:</strong></dt>
  <dd>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Course ( Units ) </th>
          <th>Unit ( Drills )</th>
           <th>Drill Title </th>
         <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @unit.drills.each do |drill| %>
          <%= render partial: 'shared/list_of_drills', locals: { drill: drill } -%>
        <% end -%>
        <tr>
          <td><%= link_to t('.new', :default => t("helpers.links.new_drill_in_unit")),
              new_unit_drill_path(@unit), :class => 'btn' %>
          </td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              units_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_unit_path(@unit), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              unit_path(@unit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
