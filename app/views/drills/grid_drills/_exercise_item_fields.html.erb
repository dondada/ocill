<%- table_cell = "cell-c" + (f.object.header.position + 1).to_s + "-r" + (f.object.exercise.position + 1).to_s %>

<td class="cell" id="<%= table_cell %>">
  <%= f.text_field :text, :class => 'text_field' %>
  <%= f.hidden_field :position, value: nested_child_index(f) %>
  <%= f.hidden_field :key %>
  <%= "Audio: " + @exercise_item.audio_name %>
  <%= link_to icon("headphones", "white").html_safe, new_exercise_item_audio_path(f.object), :table_cell => table_cell, :remote => true, 'data-controls-modal' =>  "modal-window"
  %>

  <%= render '/shared/modal', :table_cell => table_cell %>
</td>
