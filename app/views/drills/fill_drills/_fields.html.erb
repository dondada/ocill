<%= f.label :exercises, "Fill In The Blank Instructions:" %>
<%= f.label :exercises, "--  Questions contain [blanks] in [brackets] and hints at the end. (parentheses indicate a hint)" %>
<%= f.label :exercises, "--  Use \"/\" to indicate multiple [correct/acceptable/basically ok] answers." %>
<%= f.label :exercises, "--  Drag items in the list to reorder them." %>
<ol id="sortable">
  <%= f.fields_for :exercises do |builder| %>
      <%= render 'exercise_fields', :f => builder %>
  <% end %>
  <%= link_to_add_fields "Add Fill In The Blank", f, :exercises %>
</ol> <!-- #sortable -->
