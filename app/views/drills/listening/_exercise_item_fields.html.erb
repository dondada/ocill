 <fieldset class="exercise_item">
  <%= f.label :text, "Exercise Item" %>
  <%= f.text_field :text %>
  <%= f.fields_for :media_items do |builder| %>
    <%= render 'drills/listening/media_item_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Media Item", f, :media_items, File.dirname(__FILE__) %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>
