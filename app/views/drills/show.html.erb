<%- model_class = Drill -%>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:unit) %>:</strong></dt>
  <dd><%= @drill.unit.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @drill.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructions) %>:</strong></dt>
  <dd><%= @drill.instructions.to_s.html_safe %></dd>
</dl>
<div style="clear:both"></div>
<ul class="nav nav-tabs">
  <li class="active"><a href="#performance" data-toggle="tab">Performance</a></li>
  <li><a href="#placeholder" data-toggle="tab">Nothing here</a></li>
</ul>
<div class="tab-content">

    <% if can? :manage, @drill %>
      <div class="tab-pane active" id="performance">
        <%= render :partial => 'shared/performance' %>
      </div>
    <% end -%>

  <% if can? :manage, @drill %>
    <div class="tab-pane" id="placeholder">
    </div>
  <% end -%>
</div>   <!-- .tab-content -->
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              drills_path, :class => 'btn'  %>
  <% if can? :create, Attempt %>
    <%= link_to "Attempt", new_drill_attempt_path(@drill), :title => "Attempt", :class =>'btn btn-primary' %>
  <% end -%>
  <% if can? :update, @drill %>           
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_drill_path(@drill), :class => 'btn' %>
 
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                drill_path(@drill),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end -%>                
</div>
