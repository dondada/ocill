<%- model_class = Drill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:lesson) %>:</strong></dt>
  <dd><%= @drill.lesson.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @drill.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prompt) %>:</strong></dt>
  <dd><%= @drill.prompt.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructions) %>:</strong></dt>
  <dd><%= @drill.instructions.html_safe %></dd>
</dl>
<%= render :partial => 'show_exercises' %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              drills_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_drill_path(@drill), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              drill_path(@drill),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
