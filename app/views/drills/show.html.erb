<%- model_class = Drill -%>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:unit) %>:</strong></dt>
  <dd><%= @drill.unit.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @drill.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructions) %>:</strong></dt>
  <dd><%= @drill.instructions.to_s.html_safe %></dd>
</dl>
<div style="clear:both"></div>
<ul class="nav nav-tabs">
  <li class="active"><a href="#performance" data-toggle="tab">Performance</a></li>
  <li><a href="#placeholder" data-toggle="tab">Nothing here</a></li>
</ul>
<div class="tab-content">

    <% if can? :manage, @drill %>
      <div class="tab-pane active" id="performance">
        <%= render :partial => 'shared/performance', :locals => {:drill => @drill, :attempters => @attempters} %>
      </div>
    <% end -%>

  <% if can? :manage, @drill %>
    <div class="tab-pane" id="placeholder">
    </div>
  <% end -%>
</div>   <!-- .tab-content -->

