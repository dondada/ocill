<%- model_class = Unit -%>
<% if can? :read, unit %>
  <li class="nav-leaf" data-unit-id="<%= unit.id %>">
      <%= link_to icon("folder-close") + " " + unit.title, "#", :title => "View Drills" %>

    <% if can? :update, unit %>
  		<%= link_to icon("pencil"), edit_unit_path(unit), :title => "Edit" %>
  	<% end %>
    
    <% if can? :destroy, unit %>
      <%= link_to icon("remove"), unit_path(unit), :method => :delete, :title => "Remove", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
    <% end -%>
    <br />
    <a class="show-drills" href="#">Show drills... </a>
    <ul class="nav-branch drills">
  		<%= render partial: 'layouts/drill_navigation', :collection => unit.drills, as: :drill %>
    <% if can? :create, Drill %>
      <%= link_to icon("plus") + "Add New Drill", new_unit_drill_path(unit), :title => "Add New" %>
    <% end -%>
  	</ul>
  </li>
<% end -%>